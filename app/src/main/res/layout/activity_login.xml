<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="17dp"
    android:weightSum="1"
    tools:context="kr.co.raonnetworks.cityhall.LoginActivity">

    <ImageView
        android:layout_width="307dp"
        android:layout_height="163dp"
        android:layout_gravity="center"
        android:layout_weight="0.06"
        android:padding="20dp"
        android:src="@drawable/ch_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="38dp"
        android:text="의정부시청 교육 관리"
        android:textSize="28dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="@string/login_id_hint"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/colorText" />

    <EditText
        android:id="@+id/editTextPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_passwd_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/colorText" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color_selector"
        android:text="@string/login_submit"
        android:textColor="@android:color/white" />


</LinearLayout>
